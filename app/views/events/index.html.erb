<div class="max-w-2xl mx-auto px-4 py-6">
  <h1 class="text-3xl font-bold text-center mb-6">Events</h1>

  <ul class="space-y-4">
    <% @events.each do |event| %>
      <li class="bg-white shadow-md rounded-lg p-4 flex flex-col border-l-4 border-agray-400">
        <strong class="text-xl text-gray-800"><%= event.title %></strong>
        <p class="text-gray-600 text-sm mt-1">
          <%= event.created_at.strftime("%d/%m/%Y %H:%M") %>
        </p>
      </li>
    <% end %>
  </ul>
</div>

<div class="px-5 py-5 bg-white border-t flex flex-col xs:flex-row items-center xs:justify-between">
  <%== pagy_nav(@pagy) %>
</div>
